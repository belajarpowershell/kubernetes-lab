DEFAULT Bootlocal
TIMEOUT 50
UI vesamenu.c32
MENU RESOLUTION 1024 768
MENU BACKGROUND splash/pine-green-splash.png
MENU TITLE PXE Boot Menu


LABEL ubuntu-iso
    MENU LABEL ubuntu-iso
    KERNEL http://192.168.100.1/tftp/ubuntu/casper/vmlinuz
    INITRD http://192.168.100.1/tftp/ubuntu/casper/initrd
    append url=http://192.168.100.1/tftp/iso/ubuntu-20.04.6-live-server-amd64.iso autoinstall ds=nocloud-net;s=http://192.168.100.1/autoinstalldata/ ip=dhcp fsck.mode=skip ---

LABEL ubuntu-nfs
    MENU LABEL ubuntu-nfs
    KERNEL http://192.168.100.1/tftp/ubuntu/casper/vmlinuz
    INITRD http://192.168.100.1/tftp/ubuntu/casper/initrd
    APPEND root=/dev/nfs nfsroot=192.168.100.1:/srv/isoubuntu,vers=4 autoinstall ds=nocloud-net;s=http://192.168.100.1/autoinstall/ ip=dhcp fsck.mode=skip ---

LABEL Bootlocal
	MENU LABEL Bootlocal 
	LOCALBOOT 0
